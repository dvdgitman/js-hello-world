    "node": true, // Enables Node.js global variables and Node.js-specific rules
    "es6": true   // Enables ES6 syntax support
  },
  "extends": "eslint:recommended", // Extends ESLint's recommended rule set
  "parserOptions": {
    "ecmaVersion": 2021 // Set ECMAScript version to ES12 (2021)
